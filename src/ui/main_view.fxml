<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.TaskController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #1e1e1e;">

    <left>
        <VBox spacing="15" prefWidth="240" style="-fx-background-color: #252525; -fx-padding: 20;">
            <Label text="TASK MANAGER" style="-fx-text-fill: #3498db; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Separator opacity="0.1"/>

            <Button text=" Todas las tareas" onAction="#showAllTasks" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            <Button text=" Pendientes" onAction="#showPendingTasks" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            <Button text=" Completadas" onAction="#showCompletedTasks" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white;"/>

            <Separator opacity="0.1"/>
            <Label text="CALENDARIO" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-font-weight: bold;"/>

            <DatePicker fx:id="sideCalendar" onAction="#handleCalendarSelection"
                        style="-fx-background-color: transparent;" />
        </VBox>
    </left>
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="taskInputField" promptText="¿Qué hay que hacer?" HBox.hgrow="ALWAYS" />
                <DatePicker fx:id="datePicker" promptText="Fecha" prefWidth="120"/>

                <TextField fx:id="timeInputField" promptText="HH:mm" prefWidth="60" />

                <Button text="Añadir" onAction="#handleAddTask" />
            </HBox>
            <ListView fx:id="taskListView" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: #252525; -fx-control-inner-background: #252525; -fx-background-radius: 10;"/>
        </VBox>
    </center>
</BorderPane>